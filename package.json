{
  "name": "omnisharp-test-adapter",
  "displayName": "Omnisharp Test Explorer",
  "description": "Run your C# tests in the Sidebar of Visual Studio Code",
  "icon": "icon.png",
  "author": "Joshua Brooks <samirat@github.com>",
  "publisher": "samirat",
  "version": "1.0.0",
  "license": "MIT",
  "homepage": "https://github.com/samirat/omnisharp-test-adapter",
  "repository": {
    "type": "git",
    "url": "https://github.com/samirat/omnisharp-test-adapter.git"
  },
  "bugs": {
    "url": "https://github.com/samirat/omnisharp-test-adapter/issues"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "test",
    "testing"
  ],
  "main": "out/main.js",
  "scripts": {
    "clean": "rimraf out *.vsix",
    "build": "tsc",
    "watch": "tsc -w",
    "rebuild": "npm run clean && npm run build",
    "package": "vsce package",
    "publish": "vsce publish"
  },
  "dependencies": {
    "tslib": "^1.9.3",
    "vscode-test-adapter-api": "^1.7.0",
    "vscode-test-adapter-util": "^0.7.0",
    "rxjs": "6.4.0"
  },
  "devDependencies": {
    "@types/vscode": "~1.42.0",
    "typescript": "^3.5.3",
    "vscode": "1.1.36",
    "vsce": "^1.65.0"
  },
  "engines": {
    "vscode": "^1.23.0"
  },
  "extensionDependencies": [
    "hbenl.vscode-test-explorer",
    "ms-vscode.csharp"
  ],
  "activationEvents": [
    "*"
  ],
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "Omnisharp Test Adapter Configuration",
      "properties": {
        "omnisharpTestAdapter.logpanel": {
          "description": "Write diagnostic logs to an output panel",
          "type": "boolean",
          "scope": "resource",
          "default": true
        },
        "omnisharpTestAdapter.logfile": {
          "description": "Write diagnostic logs to the given file",
          "type": "string",
          "scope": "resource"
        }
      }
    }
  }
}
